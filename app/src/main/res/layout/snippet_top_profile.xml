<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/linLayoutPosts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:id="@+id/tvNumPost"
                android:text="205"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tvTextPost"
                android:text="Posts"
                android:textColor="@color/colorGrey"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLayoutFollowers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/tvNumFollwers"
                android:text="103"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                />

            <TextView
                android:id="@+id/tvTextFollowers"
                android:text="Followers"
                android:textColor="@color/colorGrey"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLayoutFollowings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/tvNumFollowings"
                android:text="300"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tvTextFollowings"
                android:text="Followings"
                android:textColor="@color/colorGrey"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>
        </LinearLayout>

        <TextView
            android:text="Edit your profile"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linLayoutFollowers"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:background="@drawable/border_grey"/>



    </android.support.constraint.ConstraintLayout>

</merge>